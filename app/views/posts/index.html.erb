<% @posts.each do |post| %>
  <div class="box">
    <article class="media">
      <figure class="media-left">
        <p class="image is-64x64">
          <img src="https://bulma.io/images/placeholders/128x128.png">
        </p>
      </figure>
      <div class="media-content">
        <div class="content">
          <p>
            <strong><%= link_to "#{post.author.name}", user_path(post.author) %></strong><small> · <%= time_ago_in_words(post.created_at) %> ago · <%= pluralize(post.likes.size, 'like') %> · 0 comments</small>
            <br>
              <%= post.content %>
          </p>
        </div>
        <div class="level">
          <div class="level-left">
            <div class="level-item">
              <% if post.liked_by?(current_user) %>
                <%= form_tag like_path(post.likes.find_by(user_id: current_user.id)), method: :delete do %>
                  <%= submit_tag 'Remove like', class: 'button is-danger is-light is-small' %>
                <% end %>
              <% else %>
                <%= form_tag likes_path, method: :post do %>
                  <%= hidden_field_tag :post_id, post.id %> 
                  <%= submit_tag 'Like post', class: 'button is-success is-light is-small' %>
                <% end %>
              <% end %>
            </div>
            <div class="level-item">
              <small><a>Comment</a></small>
            </div>
          </div>
        </div>
      </div>
    </article>
  </div>
<% end %>

