<% @posts.each do |post| %>
  <div class="box">
    <article class="media">
      <figure class="media-left">
        <p class="image is-64x64">
          <img src="https://bulma.io/images/placeholders/128x128.png">
        </p>
      </figure>
      <div class="media-content">
        <div class="content">
          <p>
            <strong><%= link_to "#{post.author.name}", user_path(post.author) %></strong><small> <%= time_ago_in_words(post.created_at) %> ago</small>
            <br>
              <%= post.content %>
              <br>
              Liked by
              <ul>
                <% post.likes.each do |like| %>
                  <li><%= like.user.name %></li>
                <% end %>
              </ul>
            <br>
          </p>
        </div>
        <div class="level">
          <div class="level-left">
            <div class="level-item">
              <small>
                <%= form_tag likes_path, method: :post do %>
                  <%= hidden_field_tag :post_id, post.id %> 
                  <small><%= submit_tag 'Like' %></small>
                <% end %>
            </div>
            <div class="level-item">
              <small><a>Comment</a></small>
            </div>
          </div>
        </div>
      </div>
    </article>
  </div>
<% end %>

